@model IEnumerable<LogisticsProject.Models.Klienci>

@{
    ViewBag.Title = "Klienci";
}

<h2><br />Klienci</h2>

<p>
    @Html.ActionLink("Utwórz", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nazwa")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adres)
        </th>
        <th>
            @Html.DisplayName("Właściciel")
        </th>
        <th>
            @Html.DisplayName("Numer Kontaktowy")
        </th>
        <th>
            @Html.DisplayName("Numer Konta")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Wlasciciel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NrKontaktowy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NrKonta)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.ID }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
